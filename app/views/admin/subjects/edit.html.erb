<% provide(:title, t(".title")) %>

<section class="courses_area p_120"></section>
<div class="container">
  <h3 class="mb-30 title_color"><%= t ".heading" %></h3>
  <%= form_for(@subject, url: admin_subject_path) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, t(".description") %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <%= link_to t(".back_button"), admin_subjects_path, class: "btn btn-primary" %>
    <%= f.submit t(".submit_button"), class: "btn btn-primary" %>
  <% end %>
</div>
</section>
