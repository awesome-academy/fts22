<% provide(:title, t(".title")) %>
<div class="container login_form">
  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t".heading" %></h3>
        </div>
        <div class="panel-body">
          <%= form_for :session, url: login_path do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
            </div>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> <%= t".remember" %>
              </label>
            </div>
            <%= f.submit t(".login_button"), class: "btn btn-lg btn-success btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
