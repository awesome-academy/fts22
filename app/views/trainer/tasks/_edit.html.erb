<div class="modal fade" id="task-edit-form" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t".heading" %></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <%= form_for Task.new, url: "", html: {id: "edit-task", method: :patch}, remote: true do |f| %>
        <div id="edit-task-error">
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, t(".name") %>
            <%= f.text_field :name, class: "form-control", id: "edit_task_name" %>
          </div>
          <div class="form-group">
            <%= f.label :description, t(".description") %>
            <%= f.text_area :description, class: "form-control", id: "edit_task_description" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit t(".submit"), class: "btn btn-primary" %>
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t".close_button" %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
